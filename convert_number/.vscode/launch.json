{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug Assembly",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}\\build\\convert_number.exe",
            "cwd": "${workspaceFolder}",
            "stopAtEntry": true,
            "MIMode": "gdb",
            "miDebuggerPath": "gdb",
            "externalConsole": true,
            "preLaunchTask": "Build e Executar Assembly",
            "setupCommands": [
                {
                    "description": "Habilitar formatação bonita para GDB",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                },
                {
                    "description": "Desmontar código ao iniciar",
                    "text": "layout asm",
                    "ignoreFailures": true
                }
            ]
        }
    ]
}
